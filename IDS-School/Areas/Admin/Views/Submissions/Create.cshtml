@model IDS_School.Models.Submission

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout_Admin.cshtml";
}

<div class="content-wrapper">
    <div class="card-header">
        <h3 class="card-title">Create Ideas Submission</h3>
    </div>
    <div style="margin-left:20px; color:red;" class="@(String.IsNullOrEmpty(ViewBag.Error) ? "d-none" : "")">@ViewBag.Error</div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosureDate" class="control-label"></label>
                <input asp-for="ClosureDate" class="form-control" />
                <span asp-validation-for="ClosureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalClosureDate" class="control-label"></label>
                <input asp-for="FinalClosureDate" class="form-control" />
                <span asp-validation-for="FinalClosureDate" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="CreationDay" class="control-label"></label>
                    <input asp-for="CreationDay" class="form-control" />
                    <span asp-validation-for="CreationDay" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to list</a>
            </div>
        </form>
    </div>
</div>
